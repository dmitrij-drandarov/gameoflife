            -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>webstart-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>jnlp-inline</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <!-- Update Manifest. Permission has to conform with JNLP -->
                    <updateManifestEntries>
                        <!--<Trusted-Library>false</Trusted-Library>-->
                        <Permissions>sandbox</Permissions>
                        <Codebase>*</Codebase>
                        <!--<Trusted-Only>true</Trusted-Only>-->
                    </updateManifestEntries>
                    <!--<templateDirectory></templateDirectory>-->
                    <verbose>true</verbose>
                    <excludeTransitive>false</excludeTransitive>

                    <jnlp>
                        <!-- Definition of the Velocity Template to use -->
                        <inputTemplateResourcePath>${project.basedir}/src/main/resources/jnlp</inputTemplateResourcePath>
                        <inputTemplate>template.vm</inputTemplate>

                        <outputFile>GameOfLife.jnlp</outputFile>
                        <mainClass>gol.GameOfLifeLauncher</mainClass>
                    </jnlp>

                    <sign>
                        <keystore>D:\tse\Data\Entwicklung\GitRepositories\gameoflife\devstore.jks</keystore>
                        <storepass>changeit</storepass>
                        <alias>tsedev</alias>
                        <keypass>tsedev</keypass>

                        <validity>90</validity>

                        <verify>true</verify>
                    </sign>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>