<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@GameOfLife.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gol.gui.GameOfLifeGuiController">
   <top>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
            <Button id="tb_btn_open" fx:id="openBtn" mnemonicParsing="false" />
            <MenuButton id="tb_btn_new" fx:id="newBtn" mnemonicParsing="false">
              <items>
                <MenuItem fx:id="newBoundedFieldItem" mnemonicParsing="false" onAction="#newBoundedBoard" text="Bounded Field" />
                <MenuItem fx:id="newTorusFieldItem" mnemonicParsing="false" onAction="#newTorusBoard" text="Torus Field" />
                  <MenuItem fx:id="newEndlessFieldItem" mnemonicParsing="false" onAction="#newEndlessBoard" text="Endless Field" />
              </items>
            </MenuButton>
            <Separator orientation="VERTICAL" />
            <Button id="tb_btn_save" fx:id="saveBtn" mnemonicParsing="false" onAction="#doSave" />
            <Separator orientation="VERTICAL" />
            <Button id="tb_btn_nextstep" fx:id="nextStepBtn" mnemonicParsing="false" onAction="#doNextStep" />
          <Button id="tb_btn_play" fx:id="playBtn" mnemonicParsing="false" onAction="#doPlay" />
            <Button id="tb_btn_pause" fx:id="pauseBtn" mnemonicParsing="false" onAction="#doPause" />
            <Separator orientation="VERTICAL" />
            <Label text="Generation:" />
            <Label fx:id="generationLabel" text="0" />
            <Slider fx:id="durationSlider" blockIncrement="1.0" max="1000.0" value="100.0" />
            <Button fx:id="leftBtn" mnemonicParsing="false" onAction="#navigateLeft" text="Left" />
            <Button fx:id="rightBtn" mnemonicParsing="false" onAction="#navigateRight" text="Right" />
            <Button fx:id="upBtn" mnemonicParsing="false" onAction="#navigateUp" text="Up" />
            <Button fx:id="downBtn" mnemonicParsing="false" onAction="#navigateDown" text="Down" />
        </items>
      </ToolBar>
   </top>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <center>
            <Canvas fx:id="canvas" height="350.0" width="550.0" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </center>
</BorderPane>
